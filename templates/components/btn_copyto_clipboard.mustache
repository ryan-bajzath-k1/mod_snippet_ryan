{{!
    @template mod_snippet/components/btn_copyto_clipboard

    This template renders a button to copy a snippet to the clipboard.

    Example context (json):
    {
    }
}}
<div class="d-flex align-items-end flex-column bd-highlight mb-3">
    <button
        id="idcopytoclipboard"
        title="{{#str}} copytoclipboard, tool_componentlibrary{{/str}}"
        aria-label="{{#str}} copytoclipboard, tool_componentlibrary {{/str}}"
        data-action="copytoclipboard"
        data-clipboard-target="#snippet-{{id}} > code"
        data-clipboard-success-message="{{#str}}success{{/str}}"
        class="btn btn-secondary mb-auto p-2 bd-highlight">{{#pix}} t/copy, core {{/pix}}</button>
</div>
