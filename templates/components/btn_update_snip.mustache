{{!
    @template mod_snippet/components/btn_update_snip

    This template renders a button to update a snip.

    Example context (json):
    {
        "cap_addsnip": "Whether the user can add a snip.",
        "cmid" : "Course module id",
        "categoryid" : "Snip category id",
        "id" : "Snip id"
    }
}}

{{#cap_addsnip}}
<a href="/mod/snippet/snip.php?id={{cmid}}&categoryid={{categoryid}}&snipid={{id}}">
    {{#pix}} t/editinline, core, {{#str}} btn_update_snippet, mod_snippet {{/str}} {{/pix}}
</a>
{{/cap_addsnip}}
