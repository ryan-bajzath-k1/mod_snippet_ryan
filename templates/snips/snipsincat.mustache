{{!
    @template mod_snippet/snips/snips

    This template renders a list of snips.

    Example context (json):
    {
        "display_language" : "PHP",
        "language"   : "php",
        "snippet"    : "Code",
        "cap_addsnip": "Whether the user can add a snip category"
    }
}}

<div class="list-group">
    {{#snipsincat}}
    <a href="{{{fullsnipurl}}}" class="list-group-item list-group-item-action{{#active}} active{{/active}}">
        <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1">{{name}}</h5>
        </div>
        <p class="mb-1">{{#shortentext}} 50, {{{intro}}} {{/shortentext}}</p>
    </a>
    {{/snipsincat}}
</div>
