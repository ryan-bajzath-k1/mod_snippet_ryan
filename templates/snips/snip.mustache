{{!
    @template mod_snippet/snips/snip

    This template renders an individual snip.

    Example context (json):
    {
        "display_language" : "PHP",
        "language"   : "php",
        "snippet"    : "Code",
        "cap_addsnip": "Whether the user can add a snip category"
    }
}}

<div class="row">
    <div class="col-md-8">
    {{^layout_accordionlist}}
        <h3>{{name}}</h3>
        {{#intro}}
            {{{intro}}}
        {{/intro}}
    {{/layout_accordionlist}}
    {{#layout_accordionlist}}
        <h4>{{ display_language }}</h4>
    {{/layout_accordionlist}}
    </div>

    <div class="col-md-4 d-flex justify-content-end">
        {{^layout_accordionlist}}
        <div class="row">
            <div class="col-md-12 d-flex justify-content-end">
                {{> mod_snippet/components/btn_update_snip }}
            </div>
        </div>
        {{/layout_accordionlist}}

        {{#layout_accordionlist}}
        {{> mod_snippet/components/btn_view_full_snip }}
        {{/layout_accordionlist}}
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        {{> mod_snippet/components/btn_copyto_clipboard }}
        <pre id="snippet-{{id}}"><code id="snippet" class="language-{{ language }}">{{{snippet}}}</code></pre>
    </div>
</div>
{{#js}}
require(['core/copy_to_clipboard']);
{{/js}}
